@using Microsoft.AspNetCore.Identity
@inject SignInManager<MDManagement.Data.Models.Employee> SignInManager
@inject UserManager<MDManagement.Data.Models.Employee> UserManager



    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {

            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link py-3 px-0 px-lg-3 rounded js-scroll-trigger">Logout</button>
                </form>
            </li>
            <li class="nav-item">
                <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
