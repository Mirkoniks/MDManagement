@using MDManagement.Web.ViewModels.LoggedHome;
@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";

}

<div class="text-center mt-5 shadow">
    @if (!Model.HasFirm)
    {

        <div class="row bg-primary p-4 rounded mt-6">
            <div class=" col-md-6">
                <form asp-action="Index" method="post">
                    <div class="form-group">
                        <label asp-for="CompanyCode"></label>
                        <input asp-for="CompanyCode" class="form-control" />
                        <span asp-validation-for="CompanyCode" class="text-danger"></span>
                    </div>
                    <input type="submit" class="btn btn-success btn-xl" />
                </form>
            </div>
            <div class="col-md-6">
                <a href="/Management/CompanyCreation" class="btn btn-warning btn-xl mt-4">Create Company</a>
            </div>
        </div>
    }

</div>
