@using MDManagement.Web.ViewModels.Project;
@model AllProjectsViewModel
@{
    ViewData["Title"] = "All Projects";
}

@if (Model.AllProjects != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model.AllProjects)
            {
                <tr>
                    <th>
                        @project.Name
                    </th>
                    <th>
                        @project.Description
                    </th>
                    <th>
                        @project.StartDate.Date
                    </th>
                    <th>
                        @project.EndDate.Date
                    </th>
                    <th>
                        @foreach (var employee in project.EmployeesInProject)
                        {
                            <p>@($"{employee.FirstName} {employee.MiddleName} {employee.LastName}")</p>
                        }
                    </th>
                </tr>
            }
        </tbody>
    </table>


}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
}

