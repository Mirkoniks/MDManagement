@using MDManagement.Web.ViewModels.Project;
@model InfoViewModel
@{
    ViewData["Title"] = $"Project {@Model.Name}";
}


<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Employees
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>
                @Model.Name
            </th>
            <th>
                @Model.Description
            </th>
            <th>
                @Model.StartDate.Date
            </th>
            <th>
                @Model.EndDate.Date
            </th>
            <th>
                @foreach (var project in Model.EmployeesInProject)
                {

                    <p>@($"{@project.FirstName} {@project.MiddleName} {@project.LastName}")</p>

                }
            </th>
        <tr>
    </tbody>
</table>