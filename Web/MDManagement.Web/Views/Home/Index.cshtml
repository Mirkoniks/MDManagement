@using MDManagement.Web.ViewModels.Home
@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";

}



@if (Model.HasFrim != true)
{
    <div class="row mb-5">
        <div class="offset-md-3 col-md-6">
            <div class="card">
               
                <div class="card-body text-black-50">
                    <h5 class="card-title">Welcome to MDManagment!</h5>
                    <p class="card-text">Join in your company or create a managment account of your business.</p>
                    <a class="btn btn-warning" asp-controller="LoggedHome" asp-action="Index">Create or Join</a>
                </div>
            </div>
        </div>
    </div>



}

<header class="masthead  text-white text-center">
    <div class="container d-flex align-items-center flex-column">
        <h1 class="masthead-heading text-uppercase mb-0">Welcome to MDManagement</h1>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Masthead Subheading-->
        <p class="masthead-subheading font-weight-light mb-0">Making bussiness easier</p>
    </div>
</header>

<section class="page-section bg-secondary text-white mb-0  " id="about">
    <div class="container">
        <!-- About Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-white">About</h2>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- About Section Content-->
        <div class="row">
            <div class="col-lg-4 ml-auto"><p class="lead">The mission of our platform is to help with the organisation of tasks, assignmets and finances inside every company.</p></div>
            <div class="col-lg-4 mr-auto"><p class="lead">The purpose of Mdmanagment is to make business easier to run.</p></div>
        </div>
    </div>
</section>