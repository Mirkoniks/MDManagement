@using MDManagement.Web.ViewModels.Management
@model EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

    <form asp-action="EditUser" method="post" class="mt-xl-n5 bg-primary p-4 rounded">
        <div class="form-row">
            <div class="col col-md-6">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="MiddleName"></label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="HireDate"></label>
                <input asp-for="HireDate" class="form-control" />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <label asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="JobTitle"></label>
                <input asp-for="JobTitle" class="form-control" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <label asp-for="Department"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="ManagerNickname"></label>
                <input asp-for="ManagerNickname" class="form-control" />
                <span asp-validation-for="ManagerNickname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6">
                <label asp-for="IsManager"></label>
                <input type="checkbox" asp-for="@Model.IsManager" />
            </div>
            <div class="col-md-6">
                <label asp-for="IsEmployee"></label>
                <input type="checkbox" asp-for="@Model.IsEmployee" />
            </div>
        </div>
        
        <input type="hidden" asp-for="EmployeeId">
        <div>
            <input type="submit" class="btn btn-danger btn-xl" />
        </div>
    </form>